<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Parallel Testing" parallel="tests" thread-count="5">
	

	<test name="ChromeTest">
	<parameter name="browser" value="Chrome"></parameter>
		<classes>


			<class name="testscripts.LoginTest">
				<methods>
					<include
						name="verifyWhetherUserIsAbleToLoginWithValidUsernameAndInvalidPassword">
					</include>
					<include
						name="verifyWhetherUserIsAbleToLoginWithValidCredentials"></include>
				</methods>
			</class>
			<class name="testscripts.HomeTest">
				<methods>
					<include name="verifyWhetherUserIsAbleToLogoutSuccessfully"></include>
				</methods>
			</class>


		</classes>
	</test> 
		<test name="EdgeTest">
	<parameter name="browser" value="Edge"></parameter>
		<classes>


			<class name="testscripts.LoginTest">
				<methods>
					<include
						name="verifyWhetherUserIsAbleToLoginWithValidUsernameAndInvalidPassword">
					</include>
					<include
						name="verifyWhetherUserIsAbleToLoginWithValidCredentials"></include>
				</methods>
			</class>
			<class name="testscripts.HomeTest">
				<methods>
					<include name="verifyWhetherUserIsAbleToLogoutSuccessfully"></include>
				</methods>
			</class>


		</classes>
	</test> 
	
	<test name="FirefoxTest">
	<parameter name="browser" value="Firefox"></parameter>
		<classes>


			<class name="testscripts.LoginTest">
				<methods>
					<include
						name="verifyWhetherUserIsAbleToLoginWithValidUsernameAndInvalidPassword">
					</include>
					<include
						name="verifyWhetherUserIsAbleToLoginWithValidCredentials"></include>
				</methods>
			</class>
			<class name="testscripts.HomeTest">
				<methods>
					<include name="verifyWhetherUserIsAbleToLogoutSuccessfully"></include>
				</methods>
			</class>


		</classes>
	</test> 
	

</suite> <!--
Suite -->
